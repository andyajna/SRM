<div class="container">
  <div class="row">
    <div class="col-md-4">
<%= simple_form_for(@update) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :date %>
    </div>
      <div class="form-group">
    <%= f.input :staff, input_html: { class: 'form-control'}  %>
    </div>
      <div class="form-group">
    <%= f.input :note, input_html: { class: 'form-control'}  %>
    </div>
    <div class="form-group">
      <%= f.input :followup, input_html: { class: 'form-control'}  %>
    </div>
      <div class="form-group">
    <%= f.association :student, input_html: { class: 'form-control'}  %>
    </div>
      

 
    <%= f.button :submit, class: 'btn btn-sm btn-success' %>
 
<% end %>
<p>&nbsp</p>
</div>
  </div>
</div>